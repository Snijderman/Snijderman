<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:defaults="clr-namespace:Snijderman.Common.Wpf.Themes.Default;assembly=Snijderman.Common.Wpf">

   <Thickness x:Key="{x:Static defaults:Dimensions.BorderThickness}">1</Thickness>

   <CornerRadius x:Key="{x:Static defaults:Dimensions.CornerRadius}">0</CornerRadius>

   <system:Double x:Key="{x:Static defaults:Dimensions.HorizontalSpace}">8</system:Double>

   <system:Double x:Key="{x:Static defaults:Dimensions.VerticalSpace}">8</system:Double>

   <system:Double x:Key="{x:Static defaults:Dimensions.CursorSpotlightRelativeSize}">0.75</system:Double>

</ResourceDictionary>