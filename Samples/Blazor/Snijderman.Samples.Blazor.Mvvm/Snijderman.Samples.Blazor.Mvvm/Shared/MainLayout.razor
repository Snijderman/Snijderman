@inherits MvvmComponentBase

@inject ClockViewModel viewModel

<Layout>
   <LayoutHeader Class="mainheader">
      <Heading Size="HeadingSize.Is5" TextTransform="TextTransform.Uppercase" TextAlignment="TextAlignment.Center" Margin="Margin.Is4.FromEnd.Is2.FromTop">Snijderman MVVM with Blazor</Heading>
   </LayoutHeader>
   <LayoutContent>
      @Body
   </LayoutContent>
   <LayoutFooter Fixed="true" Class="mainfooter">
      <Row Margin="Margin.Is0">
         <Column Margin="Margin.Is0"><Text TextAlignment="TextAlignment.Start">@_copyright</Text></Column>
         <Column Margin="Margin.Is0"><Text TextAlignment="TextAlignment.End">Current time: @Bind(viewModel, x => x.DisplayDateTime) (# times instantiated @Bind(viewModel, x => x.Counter))</Text></Column>
      </Row>
   </LayoutFooter>
</Layout>

@code{

   [Parameter]
   public RenderFragment? Body { get; set; }

   private string _copyright = $"Copyright {DateTime.Now.Year} (c) Snijderman. All rights reserved.";

}
